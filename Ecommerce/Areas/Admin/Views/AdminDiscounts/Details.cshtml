@model Ecommerce.Models.Discount

@{
    int? result = Model.DiscountQuantity - Model.DiscountUsed;
    ViewData["Title"] = "Chi tiết khuyến mãi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles{
    <link href="~/admin_assets/summernote/summernote-bs4.css" rel="stylesheet" />
    <link href="~/admin_assets/summernote/summernote.css" rel="stylesheet" />
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminDiscounts" asp-action="Index" class="breadcrumb-item">Quản lý khuyến mãi</a>
            <span class="breadcrumb-item active">Chi tiết khuyến mãi</span>
        </nav>
    </div>
</div>

<h3>Chi tiết khuyến mãi</h3>
<br />

<div class="card">
    <div class="card-body">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="media align-items-center m-b-5">
                <div class="avatar avatar-image" style="height: 75px; width: 75px">
                    <img src="https://cdn-icons-png.flaticon.com/512/726/726476.png">
                </div>
                <div class="m-l-20">
                    <h5 class="m-b-0" style="color: #0097B2">@Model.DiscountName</h5>
                    <p class="text-muted m-b-0">Code: @Model.DiscountCode</p>
                </div>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="font-weight-semibold">ID khuyến mãi</div>
            <div class="form-control">@Model.DiscountId</div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <div class="font-weight-semibold">Tên khuyến mãi</div>
                <div class="form-control">@Model.DiscountName</div>
            </div>
            <div class="form-group col-md-6">
                <div class="font-weight-semibold">Code</div>
                <div class="form-control">@Model.DiscountCode</div>
            </div>
        </div>
        <div class="form-group">
            <div class="font-weight-semibold">Chi tiết khuyến mãi</div>
            <textarea class="summernote" asp-for="DiscountDescription" placeholder="Chi tiết khuyến mãi"></textarea>
        </div>
        <div class="row">
            <div class="form-group col-md-3">
                <div class="font-weight-semibold">Số lượng khuyến mãi <span class="font-italic text-muted">(ban đầu)</span></div>
                <div class="form-control">@Model.DiscountQuantity</div>
            </div>
            <div class="form-group col-md-3">
                <div class="font-weight-semibold">Đã sử dụng</div>
                <div class="form-control">@Model.DiscountUsed</div>
            </div>
            <div class="form-group col-md-3">
                <div class="font-weight-semibold">Số lượng khuyến mãi <span class="font-italic text-muted">(còn lại)</span></div>
                <div class="form-control">@result</div>
            </div>
            <div class="form-group col-md-3">
                <div class="font-weight-semibold">Giá trị khuyến mãi</div>
                <div class="form-control">@Model.DiscountValue</div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label class="font-weight-semibold">Ngày bắt đầu</label>
                <div class="form-control">@Model.DiscountStartDate</div>
            </div>
            <div class="form-group col-md-6">
                <label class="font-weight-semibold">Ngày kết thúc</label>
                <div class="form-control">@Model.DiscountEndDate</div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label class="font-weight-semibold">Ngày tạo khuyến mãi</label>
                <div class="form-control">@Model.DiscountCreatedDate</div>
            </div>
            <div class="form-group col-md-6">
                <label class="font-weight-semibold">Ngày chỉnh sửa gần nhất</label>
                <div class="form-control">@Model.DiscountModifiedDate</div>
            </div>
        </div>
        <div class="form-group">
            <label class="font-weight-semibold" asp-for="IsActive">Trạng thái</label>
            @if (Model.IsActive == true)
            {
                <div class="form-control">Active</div>
            }
            else
            {
                <div class="form-control">Inactive</div>
            }
        </div>
    </div>
</div>
<div class="form-group">
    <a asp-action="Index" asp-controller="AdminDiscounts" class="btn btn-primary">Quay lại</a> |
    <a asp-action="Edit" asp-controller="AdminDiscounts" asp-route-id="@Model.DiscountId" class="btn btn-warning">Chỉnh sửa</a>
</div>

@section Scripts{
    <script>
        $('.datepicker-input').datepicker();
    </script>

    <script src="~/admin_assets/vendors/select2/select2.min.js"></script>
    <script src="~/admin_assets/js/pages/e-commerce-product-edit.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.1/jquery.validate.min.js"></script>
    <script src="~/admin_assets/summernote/summernote-bs4.js"></script>

    <script>

        jQuery(document).ready(function () {
            $('.summernote').summernote({
                fontNames: ['Be Vietnam Pro'],
                styleTags: ['p', 'h1', 'h2', 'h3', 'h4', 'h5'],
                height: 200,
                minHeight: null,
                maxHeight: null,
                focus: true
            });
        });
    </script>
}
