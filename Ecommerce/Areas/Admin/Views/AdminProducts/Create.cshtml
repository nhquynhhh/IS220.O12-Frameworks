@model Ecommerce.Models.Product

@{
    ViewData["Title"] = "Thêm mới sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles{
    <link href="~/admin_assets/summernote/summernote-bs4.css" rel="stylesheet" />
    <link href="~/admin_assets/summernote/summernote.css" rel="stylesheet" />
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminProducts" asp-action="Index" class="breadcrumb-item">Quản lý sản phẩm</a>
            <span class="breadcrumb-item active">Thêm mới sản phẩm</span>
        </nav>
    </div>
</div>

<h3>Thêm mới sản phẩm</h3><br />

<form asp-action="Create" asp-controller="AdminProducts" method="post" enctype="multipart/form-data" accept-charset="UTF-8">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="page-header no-gutters has-tab">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Thông tin chung</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-option">Thông tin chi tiết</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-description">Mô tả sản phẩm</a>
            </li>
        </ul>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="ProductName">Tên sản phẩm</label>
                        <input type="text" class="form-control" asp-for="ProductName" placeholder="Tên sản phẩm">
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" asp-for="ProductOriginalPrice">Giá gốc</label>
                            <input type="text" class="form-control" asp-for="ProductOriginalPrice" placeholder="Giá gốc">
                            <span asp-validation-for="ProductOriginalPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" asp-for="ProductDiscountPrice">Giá giảm</label>
                            <input type="text" class="form-control" asp-for="ProductDiscountPrice" placeholder="Giá giảm">
                            <span asp-validation-for="ProductDiscountPrice" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" asp-for="ProductCategoryId">Danh mục cha</label>
                            <select class="custom-select" asp-for="ProductCategoryId" asp-items="ViewBag.Category">
                                <option value="0" disabled selected>Chọn danh mục cha</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" asp-for="ProductSubCategoryId">Danh mục con</label>
                            <select class="custom-select" asp-for="ProductSubCategoryId" asp-items="ViewBag.SubCategory">
                                <option value="0" disabled selected>Chọn danh mục con</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="ProductImage">Hình ảnh chính</label>
                        <input name="fImg" type="file" class="form-control-file" asp-for="ProductImage">
                        <span asp-validation-for="ProductImage" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-option">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="ProductInStock">Số lượng sản phẩm trong kho</label>
                        <input type="text" class="form-control" asp-for="ProductInStock" placeholder="Số lượng sản phẩm trong kho">
                        <span asp-validation-for="ProductInStock" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="ProductBarcode">Barcode</label>
                        <input type="text" class="form-control" asp-for="ProductBarcode" placeholder="Barcode sản phẩm">
                        <span asp-validation-for="ProductBarcode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" asp-for="ProductBrandId">Thương hiệu</label>
                        <select class="custom-select" asp-for="ProductBrandId" asp-items="ViewBag.Brand">
                            <option value="0" disabled selected>Chọn thương hiệu</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <div class="form-group d-flex align-items-center">
                            <label class="font-weight-semibold" asp-for="IsActive">Trạng thái</label>
                            <div class="switch m-r-10 m-l-15">
                                <input type="checkbox" asp-for="IsActive" checked="">
                                <label for="IsActive"></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-description">
            <div class="card">
                <div class="card-body">
                    <label class="font-weight-semibold" asp-for="ProductInfo">Mô tả sản phẩm</label>
                    <textarea class="summernote" asp-for="ProductInfo" placeholder="Mô tả chi tiết sản phẩm"></textarea>
                    <span asp-validation-for="ProductInfo" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <a asp-action="Index" asp-controller="AdminProducts" class="btn btn-primary">Quay lại</a> |
        <input type="submit" class="btn btn-warning" value="Thêm sản phẩm" />
    </div>
</form>

@section Scripts{
    <script src="~/admin_assets/vendors/select2/select2.min.js"></script>
    <script src="~/admin_assets/js/pages/e-commerce-product-edit.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.1/jquery.validate.min.js"></script>
    <script src="~/admin_assets/summernote/summernote-bs4.js"></script>

    <script>

        jQuery(document).ready(function () {
            $('.summernote').summernote({
                fontNames: ['Be Vietnam Pro'],
                styleTags: ['p', 'h1', 'h2', 'h3', 'h4', 'h5'],
                height: 200,
                minHeight: null,
                maxHeight: null,
                focus: true
            });
        });
    </script>
}

