<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] | PING Cosmetics</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/user_assets/colored-logo.png">

    <!-- page css -->
    <link href="~/admin_assets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.css" rel="stylesheet">
    <link href="~/admin_assets/vendors/datatables/dataTables.bootstrap.min.css" rel="stylesheet">

    <!-- Core css -->
    <link href="~/admin_assets/css/app.min.css" rel="stylesheet">

</head>

<style>
    body{
        font-family: 'Be Vietnam Pro';
    }
</style>

<body>
    <div class="app">
        <div class="layout">
            <!-- Header START -->
            <div class="header">
                <div class="logo logo-dark">
                    <a asp-controller="Home" asp-action="Index" style="margin-top: 18px; margin-right: 18px;">
                        <img src="~/user_assets/color-logo.svg" alt="Logo">
                        <img class="logo-fold" src="~/user_assets/logo-fold.svg" alt="Logo" style="width: 41px; margin-left: 20px; margin-top: -5px;">
                    </a>
                </div>
                <div class="nav-wrap">
                    <ul class="nav-left">
                        <li class="desktop-toggle">
                            <a href="javascript:void(0);">
                                <i class="anticon"></i>
                            </a>
                        </li>
                        <li class="mobile-toggle">
                            <a href="javascript:void(0);">
                                <i class="anticon"></i>
                            </a>
                        </li>
                        <li>
                            <a href="javascript:void(0);" data-toggle="modal" data-target="#search-drawer">
                                <i class="anticon anticon-search"></i>
                            </a>
                        </li>
                    </ul>
                    <ul class="nav-right">
                        <li class="dropdown dropdown-animated scale-left">
                            <a href="javascript:void(0);" data-toggle="dropdown">
                                <i class="anticon anticon-bell notification-badge"></i>
                            </a>
                        </li>
                        <li class="dropdown dropdown-animated scale-left">
                            <div class="pointer">
                                <div class="avatar avatar-image m-h-10 m-r-15">
                                    <img src="https://kenh14cdn.com/thumb_w/660/203336854389633024/2021/12/11/photo-1-1639202539588809339670.jpg" alt="">
                                </div>
                            </div>
                        </li>
                        <li class="dropdown dropdown-animated scale-left">
                            <a href="javascript:void(0);">
                                <i class="anticon anticon-logout" style="color: red;"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>    
            <!-- Header END -->

            <!-- Side Nav START -->
            @await Html.PartialAsync("_SideNavPartialView.cshtml")
            <!-- Side Nav END -->

            <!-- Page Container START -->
            <div class="page-container">
                
                <!-- Content Wrapper START -->
                <div class="main-content">
                    @RenderBody()
                </div>
                <!-- Content Wrapper END -->

                <!-- Footer START -->
                <footer class="footer">
                    <div class="footer-content">
                        <p class="m-b-0">PING Cosmetics - 2022.</p>
                    </div>
                </footer>
                <!-- Footer END -->

            </div>
            <!-- Page Container END -->

        </div>
    </div>

    <script src="~/admin_assets/js/vendors.min.js"></script>
    <!-- Core Vendors JS -->
    <script src="~/admin_assets/js/vendors.min.js"></script>
    <script src="~/admin_assets/vendors/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin_assets/vendors/datatables/dataTables.bootstrap.min.js"></script>

    <!-- page js -->
    <script src="~/admin_assets/vendors/chartjs/Chart.min.js"></script>
    <script src="~/admin_assets/js/pages/dashboard-e-commerce.js"></script>

    <!-- Core JS -->
    <script src="~/admin_assets/js/app.min.js"></script>
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required:false)
</body>

</html>