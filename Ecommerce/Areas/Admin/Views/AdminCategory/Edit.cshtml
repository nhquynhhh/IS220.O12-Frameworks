@model Ecommerce.Models.Category

@{
    ViewData["Title"] = "Chỉnh sửa danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminCategory" asp-action="Index" class="breadcrumb-item">Quản lý danh mục cha</a>
            <span class="breadcrumb-item active">Chỉnh sửa danh mục</span>
        </nav>
    </div>
</div>

<h3>Chỉnh sửa danh mục</h3>
<br />

<form asp-action="Edit" asp-controller="AdminCategory" asp-route-id="@Model.CategoryId" method="post" accept-charset="UTF-8">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="CategoryId" />
    <input type="hidden" asp-for="CategoryCreatedDate" />
    <input type="hidden" asp-for="IsActive" />
    <div class="card">
        <div class="card-body">
            <div class="form-group">
                <label class="font-weight-semibold" asp-for="CategoryName">Tên danh mục</label>
                <input type="text" class="form-control" asp-for="CategoryName" placeholder="Tên sản phẩm">
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="font-weight-semibold" asp-for="CategoryDescription">Mô tả danh mục</label>
                <input type="text" class="form-control" asp-for="CategoryDescription" placeholder="Mô tả danh mục">
                <span asp-validation-for="CategoryDescription" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <a asp-action="Index" asp-controller="AdminCategory" class="btn btn-primary">Quay lại</a> |
        <input type="submit" class="btn btn-warning" value="Lưu thay đổi" />
    </div>
</form>