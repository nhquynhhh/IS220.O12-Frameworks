@model Ecommerce.Models.Role

@{
    ViewData["Title"] = "Xóa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index" class="breadcrumb-item">Danh sách quyền truy cập</a>
            <span class="breadcrumb-item active">Xóa quyền truy cập</span>
        </nav>
    </div>
</div>

<h3>Xóa</h3>

<h4 class="text-danger">Xác nhận xóa quyền truy cập</h4>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin quyền truy cập <span class="ml-2 text-success font-weight-bold">@Model.RoleName</span></h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID quyền truy cập:</td>
                        <td class="text-dark font-weight-semibold">@Model.RoleId</td>
                    </tr>
                    <tr>
                        <td>Tên quyền truy cập:</td>
                        <td>@Model.RoleName</td>
                    </tr>
                    <tr>
                        <td>Mô tả quyền truy cập:</td>
                        <td>@Model.RoleDescription</td>
                    </tr>
                    <tr>
                        <td>Trạng thái hoạt động:</td>
                        <td>
                            <span class="badge badge-pill badge-cyan">Active</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
    
<form asp-action="Delete">
    <input type="hidden" asp-for="RoleId" />
    <input type="submit" value="Xóa quyền truy cập" class="btn btn-danger" />
</form>

<div class="mt-2">
    <a asp-action="Index">Quay lại</a>
</div>
