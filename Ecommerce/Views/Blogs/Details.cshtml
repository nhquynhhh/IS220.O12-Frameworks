@model Ecommerce.Models.Blog

@{
    ViewData["Title"] = Model.BlogTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string url = $"/Blog/{Model.BlogSlug}-{Model.BlogId}.html";
    List<Blog> SuggestedBlog = ViewBag.SuggestedBlog;
}

<main class="main-content">
    <div class="blog-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="blog-detail-item">
                        <div class="blog-img">
                            <img src="@Model.BlogImage" alt="@Model.BlogTitle" style="width: 25%; margin-left: auto; margin-right: auto; display: block;">
                        </div>
                        <hr />
                        <div class="blog-content text-start pb-0">
                            <div class="blog-meta text-dim-gray pb-3">
                                <ul>
                                    <li class="date"><i class="fa fa-calendar-o me-2"></i>@Model.BlogCreatedDate</li>
                                </ul>
                            </div>
                            <h5 class="title mb-4" style="color: #0097B2; font-weight: 600;">
                                @Model.BlogTitle
                            </h5>
                            <p class="short-desc mb-4 mb-7 text-muted" style="line-height: 30px; text-indent: 30px; text-align: justify;">@Model.BlogSummary</p>
                            <div style="line-height: 30px; text-indent: 30px; text-align: justify;">
                                @Html.Raw(Model.BlogContent)
                            </div>
                            <br />
                            <a asp-action="Index" asp-controller="Blogs" class="txt-cyan orange-link"><i class="fa-solid fa-arrow-left-long"></i> Quay lại</a>
                            <br />
                            <div class="feedback-area section-space-top-55">
                                <h4 class="heading mb-1" style="color: #0097B2; font-weight: 600;">Bài viết liên quan</h4>
                                <hr />
                                <div class="widgets-area mb-9">
                                    <div class="widgets-item">
                                        <div class="swiper-container widgets-list-slider style-2 swiper-container-multirow swiper-container-initialized swiper-container-horizontal swiper-container-pointer-events">
                                            <div class="swiper-wrapper" id="swiper-wrapper-62104b1dfbb1d3188" aria-live="polite" style="width: 288px; transform: translate3d(0px, 0px, 0px);">
                                                @if (SuggestedBlog != null && SuggestedBlog.Count() > 0)
                                                {
                                                    foreach (var item in SuggestedBlog)
                                                    {
                                                        string _url = $"/Blog/{item.BlogSlug}-{item.BlogId}.html";
                                                        <div class="swiper-slide" role="group" aria-label="3 / 3" style="margin-top: 25px; width: 263px; margin-right: 25px;">
                                                            <div class="product-list-item">
                                                                <div class="product-img img-zoom-effect">
                                                                    <a href="@_url">
                                                                        <img class="img-full" src="@item.BlogImage" alt="@item.BlogTitle">
                                                                    </a>
                                                                </div>
                                                                <div class="product-content">
                                                                    <h5 class="title mb-3">
                                                                        <a href="@_url">@item.BlogTitle</a>
                                                                    </h5>
                                                                    <div class="blog-meta text-manatee pb-1">
                                                                        <ul>
                                                                            <li class="date">@item.BlogCreatedDate</li>
                                                                        </ul>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>