@model Ecommerce.ModelViews.LoginVM

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header-wrapper white fixed">
    <div class="header-container" style="display: flex;">
        <div class="logo-site">
            <a href="/" class="logo">
                <img src="~/user_assets/color-logo.svg" alt="logo">
            </a>
        </div>
        <div class="page-header">
            <h2 class="section-txt-title" style="font-weight: 700; margin-top: 25px;">Đăng nhập</h2>
        </div>
    </div>
</div>

<div class="login-wrapper">
    <div class="login">
        <div class="txt-divider">Đăng nhập</div>
        <br>
        <form class="login-form" method="post" asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <label asp-for="Email" style="font-weight: 400;">Email</label><br>
            <input type="email" asp-for="Email" placeholder="Nhập email">
            <span asp-validation-for="Email" class="text-danger" style="font-size: 12px;"></span><br><br>

            <label asp-for="Password" style="font-weight: 400;">Mật khẩu</label><br>
            <input type="password" asp-for="Password" placeholder="Nhập mật khẩu" class="password-hide-3"><i class="fa-regular fa-eye-slash txt-cyan reveal-pass-3" onclick="togglePassword3()"></i>
            <span asp-validation-for="Password" class="text-danger" style="font-size: 12px;"></span><br><br>

            <button class="btn-login txt-uppercase">Đăng nhập</button>
        
        <br>
        <a href="" class="txt-cyan txt-14 right" id="forget-password">Quên mật khẩu</a><br>
        <hr style="width: 70%; height: 1px; background-color: var(--black); border: none; margin: 20px auto;">
        <div class="create-acc txt-center">
            <span>Bạn chưa có tài khoản? <a href="/register.html" class="txt-cyan orange-link">Tạo tài khoản</a></span>
        </div>
        </form>
    </div>
</div>

<footer style="background-color: white; color: var(--cyan);">
    <div class="footer-copyright txt-center" style="font-weight: 400;">Copyright by PING Cosmetics - Based in Ho Chi Minh City</div>
    <div class="footer-hotline txt-center">Hotline: 012345678</div>
</footer>

@section Scripts{
    <script>
        function togglePassword3() {
            var x = document.querySelector(".password-hide-3");
            var eyeIcon = document.querySelector(".reveal-pass-3");
            if (x.type === "password") {
                x.type = "text";
                eyeIcon.className = "fa-regular fa-eye txt-cyan reveal-pass-3"
            } else {
                x.type = "password";
                eyeIcon.className = "fa-regular fa-eye-slash txt-cyan reveal-pass-3"
            }
        }
        
    </script>

}